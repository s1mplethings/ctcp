{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SDDAI Graph JSON",
  "type": "object",
  "required": [
    "schema_version",
    "nodes",
    "edges"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "label"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "Doc",
              "Module",
              "Contract",
              "Gate",
              "Run",
              "Phase"
            ]
          },
          "label": {
            "type": "string"
          },
          "phase": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "statusFlags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "meta": {
            "type": "object"
          },
          "parent": {
            "type": "string"
          },
          "position": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ],
            "additionalProperties": false
          },
          "view": {
            "type": "string"
          },
          "group": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "tier": {
            "type": "string"
          },
          "mutable": {
            "type": "boolean"
          },
          "pinned": {
            "type": "boolean"
          },
          "collapsed": {
            "type": "boolean"
          },
          "childrenCount": {
            "type": "integer"
          },
          "category": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "source",
          "target",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "docs_link",
              "produces",
              "consumes",
              "verifies",
              "phase_contains",
              "run_touches"
            ]
          },
          "label": {
            "type": "string"
          },
          "confidence": {
            "type": "string",
            "enum": [
              "manual",
              "auto",
              "low"
            ]
          },
          "meta": {
            "type": "object"
          },
          "aggregate": {
            "type": "boolean"
          },
          "weight": {
            "type": "integer"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
