{
  "spec_id": "ctcp_file_request_v1",
  "schema_version": "ctcp-file-request-v1",
  "type": "object",
  "required": [
    "schema_version",
    "goal",
    "needs",
    "budget",
    "reason"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "ctcp-file-request-v1"
    },
    "goal": {
      "type": "string"
    },
    "needs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "mode"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "full",
              "snippets"
            ]
          },
          "line_ranges": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    },
    "budget": {
      "type": "object",
      "required": [
        "max_files",
        "max_total_bytes"
      ],
      "properties": {
        "max_files": {
          "type": "integer"
        },
        "max_total_bytes": {
          "type": "integer"
        }
      }
    },
    "reason": {
      "type": "string"
    }
  }
}
